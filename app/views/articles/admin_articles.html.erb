
<table>
	<h3>Articles for approval</h3>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="3"></th>
	</tr>

	<% @pending_articles.each do |article| %>
	<tr>
		<td><%= article.title %></td>
		<td><%= article.text %></td>
		<td><%= link_to 'Show', article_path(article) %></td>
		<td><%= link_to 'Approve', approved_by_admin_article_path(article) %></td>
        <td><%= link_to 'Reject', rejected_by_admin_article_path(article) %></td>
		<!-- <td> Status:<%#= article.status %></td> -->
	</tr>
	<% end %>	

</table><br><br>

