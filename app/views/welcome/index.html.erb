<p align="center">7 NODES BLOG</p>
<h1>Listing all Articles</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="3"></th>
	</tr>

	<% @articles.each do |article| %>
	<tr>
		<td><%= article.title %></td>
		<td><%= article.text %></td>
		<td><%= link_to 'Show', article_path(article) %></td>
	
	</tr>
	<% end %>	

</table>
<% if user_signed_in? %>
	<p align="left"><%= link_to "Dashboard", dashboard_path %></p>
<% else %>
	<p align="left"><%= link_to "Login", new_user_session_path %></p>
<% end %>