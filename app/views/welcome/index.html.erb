
<h1 id="blog"; align="center">7 NODES BLOG</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="2"></th>
	</tr>

	<% @approved_articles.each do |article| %>
	<tr>
		<td><%= article.title %></td>
		<td><%= article.text %></td>
		<% if user_signed_in? %>
			<td> <%= link_to 'Show', article_path(article) %></td>
		<% end %>
	</tr>
	<% end %>	

</table>
<% if user_signed_in? %>
	<p align="left"><%= link_to "Dashboard", dashboard_path %></p>
<% else %>
	<p align="left"><%= link_to "Login", new_user_session_path %></p>
<% end %>